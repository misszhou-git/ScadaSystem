<UserControl x:Class="TulingScadaSystem.Ucs.PaginationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TulingScadaSystem.Ucs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
        <Button Width="30"
                Margin="0,0,5,0"
                Command="{Binding GoToFirstPageCommand}"
                Content="&lt;&lt;"
                Style="{DynamicResource TulingButtonStyle}" />
        <Button Width="30"
                Margin="0,0,5,0"
                Command="{Binding GoToPreviousPageCommand}"
                Content="&lt;"
                Style="{DynamicResource TulingButtonStyle}" />
        <TextBox Width="30"
                 Margin="0,0,5,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Text="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" />
        <Button Width="30"
                Margin="0,0,5,0"
                Command="{Binding GoToNextPageCommand}"
                Content="&gt;"
                Style="{DynamicResource TulingButtonStyle}" />
        <Button Width="30"
                Margin="0,0,5,0"
                Command="{Binding GoToLastPageCommand}"
                Content="&gt;&gt;"
                Style="{DynamicResource TulingButtonStyle}" />
        <TextBlock Margin="20,0,5,0"
                   VerticalAlignment="Center"
                   Text="总页码:" />
        <TextBlock Margin="20,0,5,0"
                   VerticalAlignment="Center"
                   Text="{Binding TotalPages}" />
    </StackPanel>
</UserControl>

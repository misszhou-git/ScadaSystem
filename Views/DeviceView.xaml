<UserControl x:Class="TulingScadaSystem.Views.DeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:TulingScadaSystem.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TulingScadaSystem.ViewModels"
             d:DataContext="{d:DesignInstance vm:DeviceViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Border Background="#009688">
            <TextBlock HorizontalAlignment="Center"
                       FontSize="30"
                       Foreground="White"
                       Text="产线总控制" />
        </Border>

        <Border Grid.Row="1"
                BorderBrush="#50a0ff"
                BorderThickness="1">
            <UniformGrid Rows="1">
                <Button Width="200"
                        Height="100"
                        Margin="10"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Background="LimeGreen"
                        Command="{Binding WriteDeviceControlCommand}"
                        CommandParameter="TotalStart"
                        Content="总启动"
                        FontSize="40" Click="Button_Click" />
                <Button Width="200"
                        Height="100"
                        Margin="10"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Background="Red"
                        Command="{Binding WriteDeviceControlCommand}"
                        CommandParameter="TotalStop"
                        Content="总停止"
                        FontSize="40" />
                <Button Width="200"
                        Height="100"
                        Margin="10"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Background="#50a0ff"
                        Command="{Binding WriteDeviceControlCommand}"
                        CommandParameter="MechanicalReset"
                        Content="机械复位"
                        FontSize="40" />
                <Button Width="200"
                        Height="100"
                        Margin="10"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Background="#febf57"
                        Command="{Binding WriteDeviceControlCommand}"
                        CommandParameter="AlarmReset"
                        Content="报警复位"
                        FontSize="40" />
                <Button Width="200"
                        Height="100"
                        Margin="10"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Background="#414141"
                        Command="{Binding WriteDeviceControlCommand}"
                        CommandParameter="IdleRun"
                        Content="空体运行"
                        FontSize="40" />
            </UniformGrid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="#50a0ff"
                    BorderThickness="1">
                <UniformGrid Columns="2" Rows="4">
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="脱脂工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="{Binding ScadaReadDataProp.DegreasingStationOpen}"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="DegreasingStationOpen" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" CommandParameter="DegreasingStationOpen" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>

                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="水分炉工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="粗洗工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="冷却室工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="陶化工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="固化炉工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="精洗工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                    <StackPanel Margin="5"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="#1b2755"
                                   Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                   Text="输送机工位" />
                        <ToggleButton Width="100"
                                      Height="40"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="MaterialDesignSwitchLightToggleButton" />
                    </StackPanel>
                </UniformGrid>
            </Border>

            <Border Grid.Column="1"
                    BorderBrush="#50a0ff"
                    BorderThickness="1">
                <GroupBox Margin="16" Header="日志文件">
                    <GroupBox.InputBindings>
                        <MouseBinding Command="{Binding ClearLogCommand}" Gesture="LeftDoubleClick" />
                    </GroupBox.InputBindings>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock FontSize="20"
                                   Foreground="Black"
                                   Text="{Binding LogContent}"
                                   TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>

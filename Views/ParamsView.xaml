<UserControl x:Class="TulingScadaSystem.Views.ParamsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:TulingScadaSystem.Helpers"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:TulingScadaSystem.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TulingScadaSystem.ViewModels"
             d:DataContext="{d:DesignInstance vm:ParamsViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#546e7a" BorderThickness="1">
            <StackPanel>
                <Button Content="保存参数" Style="{DynamicResource TulingButtonStyle}" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="PLC地址：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.PlcParam.PlcIp}"
                                 TextAlignment="Center" />
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="PLC类型：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.PlcParam.PlcType}"
                                 TextAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="端口号：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.PlcParam.PlcPort}"
                                 TextAlignment="Center" />
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="超时时间：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.PlcParam.PlcConnectTimeOut}"
                                 TextAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="循环时间：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.PlcParam.PlcCycleInterval}"
                                 TextAlignment="Center" />
                    </StackPanel>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="自动采集：" />
                        <ToggleButton Width="80"
                                      Margin="5"
                                      IsChecked="{Binding RootParamProp.PlcParam.AutoCollect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="自动采集开关">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" />
                                </i:EventTrigger>

                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>
                    </StackPanel>
                    <Rectangle Width="70" />
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="自动模拟：" />
                        <ToggleButton Width="80"
                                      Margin="5"
                                      IsChecked="{Binding RootParamProp.PlcParam.AutoMock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="自动模拟开关">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleMockCommand}" />
                                </i:EventTrigger>

                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleMockCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                BorderBrush="#546e7a"
                BorderThickness="1">
            <StackPanel>
                <Button Content="压力参数" Style="{DynamicResource TulingButtonStyle}" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="当前压力：" />
                        <TextBox Width="420"
                                 Margin="5"
                                 Text="{Binding RootParamProp.SystemParam.AuthCode}"
                                 TextAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="5Mpa：" />
                        <ToggleButton Width="80"
                                      Margin="5"
                                      IsChecked="{Binding RootParamProp.SystemParam.AutoClearLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                      ToolTip="自动采集开关" />
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                            Margin="5"
                                Content="10Mpa：" />
                        <ToggleButton Width="80"
                  Margin="5"
                  IsChecked="{Binding RootParamProp.SystemParam.AutoClearLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                  ToolTip="自动采集开关" />
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
           Margin="5"
           Content="15Mpa：" />
                        <ToggleButton Width="80"
                  Margin="5"
                  IsChecked="{Binding RootParamProp.SystemParam.AutoClearLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                  ToolTip="自动采集开关" />
                    </StackPanel>
                    <!--<StackPanel Margin="10" Orientation="Horizontal">
                        <Label Width="80"
                               Margin="5"
                               Content="清除天数：" />
                        <TextBox Width="150"
                                 Margin="5"
                                 Text="{Binding RootParamProp.SystemParam.AutoClearDay}"
                                 TextAlignment="Center" />
                    </StackPanel>-->
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
